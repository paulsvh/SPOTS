<%= form_for(@spot, url: user_spots_path) do |f| %>

    <%= render partial: 'layouts/errors' %>

    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :location %>
    <%= f.text_field :location %><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <%= f.label "Spot Photo" %>
    <%= f.file_field :image %><br>

    <%= f.submit %>

<% end %>